<div>
    <h2 class="text-center">User dashboard</h2>
    <p class="text-center">currently ALL users are listed</p>
    {{#if users.length}}
        {{#each users as |user|}}
            <div>
            {{> user-card user}}
            </div>
        {{/each}}
        {{else}}
            <div>
                <p>No users have been registred yet.</p>
            </div>
    {{/if}}
</div>

